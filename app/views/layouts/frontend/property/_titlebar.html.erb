<%
  currency ||= current_currency
%>

<!-- Titlebar
================================================== -->
<div id="titlebar" class="property-titlebar margin-bottom-0">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <!--
        <%# if request.referrer.present? %>
          <a href="<%#= request.referrer %>" class="back-to-listings"></a>
          <div class="col-md-10">
            <div class="property-title">
        <%# else %>
          <div class="col-md-10">
            <div class="property-title margin-left-0">
        <%# end %>
        -->

        <div class="col-md-10">
          <div class="property-title margin-left-0">
            <h2>
              <%= property.page_h1 %> <span class="property-badge"
                                            style="background-color: transparent;
                                                   color: #274abb;
                                                   border: 1px solid #274abb;
                                                   padding: 1px 11px 1px 11px;"><%= property.sale_type %></span>

              <% if current_user.present? %>
                <a href="<%= edit_property_path(property) %>">
                  <small><i class="fas fa-edit" aria-hidden="true"></i></small>
                </a>
              <% end %>

            </h2>
            <span>
              <a href="#location" class="listing-address">
                <i class="fas fa-map-marker"></i>
                <%= property.address %>
              </a>
            </span>
          </div>
        </div>

        <div class="property-pricing">
          <div class="property-price" style="font-weight: 700;"><%= Formatters::PriceFormatter.format_price(property, currency: currency) %></div>
          <div class="sub-price"><%= Formatters::PriceFormatter.format_price_for_area(property, currency: currency) %></div>
        </div>

      </div>
    </div>
  </div>
</div>