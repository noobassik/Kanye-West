<!-- Widget -->
<div class="widget">

  <h3>Popular Posts</h3>
  <ul class="widget-tabs">

    <!-- Post -->
    <% articles.each do |article| %>
    <li>
      <div class="widget-content">
        <div class="widget-thumb">
          <a href="<%= article.seo_path %>"><img src="images/blog-widget-03.jpg" alt=""></a>
        </div>

        <div class="widget-text">
          <h5><a href="<%= article.seo_path %>"><%= article.title %></a></h5>
          <span>October 26, 2016</span>
        </div>
        <div class="clearfix"></div>
      </div>
    </li>
    <% end %>

  </ul>

</div>
<!-- Widget / End-->