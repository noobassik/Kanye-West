<!-- Content
================================================== -->
<div class="container">
  <div class="row">
    <div class="col-md-12">

      <% unless @agency.is_active? %>
        <%= disabled_obj_alert(:agencies).html_safe %>
      <% end %>

      <%= render partial: "layouts/frontend/agency/main_view", locals: { agency: @agency } %>
    </div>
  </div>
</div>

<!-- Content
================================================== -->
<div class="container">
  <div class="row sticky-wrapper">

    <div class="col-lg-12 col-md-12">

      <div class="style-1 agency-tabs">

        <!-- Tabs Navigation -->
        <ul class="tabs-nav">
          <li class="active"><a href="#tab1"><%= t(:our_property, scope: :agencies) %></a></li>
          <% if @agency.contact_people.present? %>
            <li><a href="#tab2"><%= t(:our_agents, scope: :agencies) %></a></li>
          <% end %>
        </ul>

        <!-- Tabs Content -->
        <div class="tabs-container">
          <div class="tab-content" id="tab1">

            <%= render partial: 'layouts/frontend/common/listings_block', locals: { pagination: @pagination, disable_agency: true } %>

          </div>


          <div class="tab-content" id="tab2">
            <!-- Agents Container -->
            <div class="row">
              <% @agency.contact_people.each do |agent| %>
                <!-- Agent -->
                <%= render partial: 'layouts/frontend/agency/agent', locals: { agent: agent } %>
                <!-- Agent / End -->
              <% end %>

            </div>
            <!-- Agents Container / End -->

          </div>

        </div>

      </div>

    </div>
    <!-- Sidebar / End -->

  </div>
</div>