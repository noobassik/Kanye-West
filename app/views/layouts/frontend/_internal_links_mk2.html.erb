<%
  nofollow ||= false
%>

<!-- Fullwidth Section -->
<section class="fullwidth internal_links_sections" data-background-color="#f7f7f7" id="internal_links_sections">

  <!-- Box Headline -->
  <div class="headline-box internal_links_sections_header"><%= box_title %></div>

  <!-- Content -->
  <div class="container">
    <% group_links.each do |group_title, links| %>

      <div class="row">
        <div class="col-md-12">
          <div class="h4" style="text-align: left;"><%= group_title %></div>
          <hr class="margin-top-15 margin-bottom-15">
        </div>
      </div>

      <div class="row margin-bottom-15">
        <% links.each do |sl| %>
          <div class="col-lg-4">
            <% if nofollow %>
              <%= link_to sl[:name], sl[:link], rel: "nofollow" %>
            <% else %>
              <%= link_to sl[:name], sl[:link] %>
            <% end %>
          </div>
        <% end %>
      </div>

    <% end %>

  </div>
</section>
<!-- Fullwidth Section / End -->