<% title 'Propimo â€“ ' + t(:log_in, scope: :devise) %>
<% meta_robots "noindex, nofollow" %>

<div class="container">
  <%= render "devise/messages" %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
    <h2><%= t(:log_in, scope: :devise) %></h2>

    <div class="with-forms">
      <%#= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, class: 'ico-01', placeholder: "Email" %>
    </div>

    <div class="with-forms">
      <%#= f.label :password %><br>
      <%= f.password_field :password, autocomplete: t(:off, scope: :devise), class: 'ico-01', placeholder: t(:password) %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="checkboxes in-row">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, t(:remember_me, scope: :devise) %>

        <br><br>

      </div>
    <% end -%>


      <%#= f.submit "Log in", class: "button" %>
    <button class="button" type="submit"><%= t(:log_in, scope: :devise) %></button>
    <a href="<%= new_user_password_path %>" rel="nofollow"><%= t(:recover_password, scope: :devise) %></a>

    <br><br>

  <% end %>

  <%#= render "devise/shared/links" %>
</div>