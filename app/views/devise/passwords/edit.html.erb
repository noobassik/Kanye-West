<% title 'Propimo â€“ ' + t(:change_your_password, scope: :devise) %>

<div class="container">
  <h2><%= t(:change_your_password, scope: :devise) %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, t(:new_password, scope: :devise) %><br>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t(:char_min, scope: :devise) %>)</em><br>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: t(:off, scope: :devise)  %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t(:password_confirmation, scope: :devise) %><br>
      <%= f.password_field :password_confirmation, autocomplete: t(:off, scope: :devise) %>
    </div>

    <div class="actions">
      <%= f.submit t(:change_my_password, scope: :devise) %>
    </div>
  <% end %>
</div>
