<h2><%= t(:edit, scope: :common) %> <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t(:waiting_for_confirmation, scope: :devise) %> <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t(:leave_blank, scope: :devise) %> )</i><br>
    <%= f.password_field :password, autocomplete: t(:off, scope: :devise) %>
    <% if @minimum_password_length %>
      <br>
      <em><%= @minimum_password_length %> <%= t(:char_min, scope: :devise) %> </em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: t(:off, scope: :devise) %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t(:password_to_confirm, scope: :devise) %> )</i><br>
    <%= f.password_field :current_password, autocomplete: t(:off, scope: :devise) %>
  </div>

  <div class="actions">
    <%= f.submit t(:update, scope: :devise) %>
  </div>
<% end %>

<h3><%= t(:cancel_my_account, scope: :devise) %> </h3>

<p><%= t(:unhappy, scope: :devise) %> <%= button_to t(:cancel_my_account, scope: :devise) , registration_path(resource_name), data: { confirm: t(:contirm, scope: :devise) }, method: :delete %></p>

<%= link_to t(:back, scope: :common) , :back %>
