<% content_for :modal_title do %>
  <%= t('comments.modal_title') %>
<% end %>

<% content_for :modal_body do %>
  <div class="row">
    <div class="col-md-12">
      <div id="comments_list">
        <table id="comments_table"
               class="table table-hover comments-table"
        >
          <tbody></tbody>
        </table>

        <div class="comments-loader">
          <%= render_loader('comments_list_loader_id') %>
        </div>

        <h3 id="no_comments_label_id"
            class="no-comments-label"
        >
          <%= t('comments.no_comments') %>
        </h3>
      </div>
    </div>
  </div>
  <div class="row comments-form">
    <div class="col-md-12">
      <%= render partial: 'modals/comments_modal/form' %>
    </div>
  </div>
<% end %>

<% content_for :modal_footer do %>
  <button class="btn btn-primary"
          type="button"
          id="submit_comment_id"
          disabled
  >
    <%= t('common.add') %>
  </button>

  <button type="button"
          class="btn btn-default"
          data-dismiss="modal"
  >
    <%= t('common.cancel') %>
  </button>
<% end %>

<%= render template: 'layouts/modal',
           locals: {
               modal_id: modal_id,
               modal_label_id: modal_label_id
           }
%>
