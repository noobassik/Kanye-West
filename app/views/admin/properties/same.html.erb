<% title @page_title %>
<h2><%= t(:same, scope: :properties) %>
  <%= link_to t(:index, scope: :properties), properties_path, class: 'btn btn-primary' %>
</h2>

<table class="table table-striped table-hover table-with-items">
  <tr>
    <th>â„–</th>
    <th><%= t(:name, scope: :common) %></th>
    <th><%= t(:type, scope: :properties) %></th>
    <th><%= t(:agency, scope: :properties) %></th>
    <th><%= t(:ex_link, scope: :properties) %></th>
    <th></th>
  </tr>

  <% @properties.each_with_index do |property, index| %>
    <% property = property.present %>
    <tr>
      <td><%= index + 1 %></td>
      <%= property.page_h1 %><br>
      <td><%#= property&.property_type&.title_ru %></td>
      <td><%#= property&.agency&.name_ru %></td>
      <td>
        <%# if property.external_link.present? %>
        <%#= link_to property&.external_link, property&.external_link, target: "_blank" %>
        <%# end %>
      </td>
      <td>
        <div class="btn-group btn-group-sm pull-right">
          <%#= link_to t(:show, scope: :common), property, class: 'btn btn-default', title: t(:show, scope: :common) %>
          <%#= link_to t(:edit, scope: :common), edit_property_path(property), class: 'btn btn-default', title: t(:edit, scope: :common) %>
          <%#= link_to t(:delete, scope: :common), property,
                        method: :delete,  class: 'btn btn-default', data: { confirm: t(:delete_confirm, scope: :properties) }, title: t(:delete, scope: :common) %>
        </div>
      </td>
    </tr>
  <% end %>
</table>