<div class="form-group row">
  <%= f.label :article_category, t(:show, scope: :article_categories), class: 'col-lg-2 control-label' %>
  <div class="col-lg-6">
    <%= f.select :article_category_id, @article_categories, { prompt: "Категория..." }, class: "form-control select2-enable" %>
    <%= danger_help_block(:article_category_id) %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :country, t(:show, scope: :countries), class: 'col-lg-2 control-label' %>
  <div class="col-lg-6">
    <%= f.select :country_id, @countries, { prompt: "Страна..." }, class: "form-control select2-enable" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :slug, t(:slug, scope: :areas), class: 'col-lg-2 control-label' %>
  <div class="col-lg-6">
    <%= f.text_field :slug, class: "form-control" %>
    <%= danger_help_block(:slug) %>
  </div>
</div>

