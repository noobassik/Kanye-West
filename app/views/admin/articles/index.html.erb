<% title @page_title %>
<h2><%= t(:index, scope: :articles) %>
  <%= link_to t("common.add"), new_article_path, class: 'btn btn-primary' %>
</h2>

<table class="table table-striped table-hover table-with-items">
  <tr>
    <th>â„–</th>
    <th><%= t(:title_ru, scope: :common) %></th>
    <th><%= t(:title_en, scope: :common) %></th>
    <th><%#= t(:slug, scope: :common) %></th>
    <th><%#= t(:articles_count, scope: :common) %></th>
    <th></th>
  </tr>

  <% @objects.each_with_index do |article, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= article.title_ru %></td>
        <td><%= article.title_en %></td>
        <td><%#= article.slug %></td>
        <td><%#= article.articles.count %></td>
        <td>
          <%= render_compact_control_buttons(obj: article,
                                             show_obj_path: article.seo_path,
                                             edit_obj_path: edit_article_path(article),
                                             confirm_message: t(:delete_confirm, scope: :articles)) %>
        </td>
      </tr>
  <% end %>
</table>
