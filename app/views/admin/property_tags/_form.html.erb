<%= form_with model: @object, data: { remote: true, type: :json }, html: { 'data-ajax-submit' => '' } do |f| %>
  <div class="form-group row">
    <%= f.label :title_ru, t('common.title_ru'), class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :title_ru, class: "form-control" %>
      <%= danger_help_block(:title_ru) %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :title_en, t('common.title_en'), class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :title_en, class: "form-control" %>
      <%= danger_help_block(:title_en) %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :is_active, t(:is_active, scope: :areas), class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.check_box :is_active, class: "form-check" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :moderated, t(:moderated, scope: :common), class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.check_box :moderated, class: "form-check" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :show_in_filter, t(:show_in_filter, scope: :common).capitalize, class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.check_box :show_in_filter, class: "form-check" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :property_supertype, "Property Tag Category", class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.select :property_tag_category_id,
                   @property_tag_categories,
                   {prompt: "Категория..."},
                   class: "form-control select2-enable" %>
      <%= danger_help_block(:property_tag_category_id) %>
    </div>
  </div>

  <%= render partial: 'admin/property_tags/form/nested_property_tag_aliases',
             locals: {
               form: f
             }
  %>

  <%= render_control_buttons(form: f,
                             obj: @object,
                             confirm_message: t(:delete_confirm, scope: :property_tag)) %>
<% end %>
