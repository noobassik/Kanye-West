<% title @page_title %>
<h2><%= t(:index, scope: :seo_templates_groups) %>
  <%= link_to t("common.add"), new_seo_templates_group_path, class: 'btn btn-primary' %>
</h2>
<small>Используются для группировки ссылок в перелинковке</small>

<table class="table table-striped table-hover table-with-items">
  <tr>
    <th>№</th>
    <th><%= "Title Ru" %></th>
    <th><%= "Title En" %></th>
    <th><%= t("areas.is_active") %></th>
    <th><%= t("seo_templates.index") %></th>
    <th></th>
  </tr>

  <% @objects.each_with_index do |seo_templates_group, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= seo_templates_group.title_ru %></td>
        <td><%= seo_templates_group.title_en %></td>
        <td><%= Utils::Html::bool_glyphicon(seo_templates_group.is_active) %></td>
        <td><%= seo_templates_group.seo_templates.count %></td>
        <td>
          <%= render_compact_control_buttons(obj: seo_templates_group,
                                             edit_obj_path: edit_seo_templates_group_path(seo_templates_group),
                                             confirm_message: t(:delete_confirm, scope: :seo_templates_groups)) %>
        </td>
      </tr>
  <% end %>
</table>
