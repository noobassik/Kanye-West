<%= form_with model: @object, data: { remote: true, type: :json }, html: { 'data-ajax-submit' => '' } do |f| %>
  <div class="form-group row">
    <%= f.label :title_ru, t(:title_ru, scope: :common), class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :title_ru, class: "form-control" %>
      <%= danger_help_block(:title_ru) %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :title_en, t(:title_en, scope: :common), class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :title_en, class: "form-control" %>
      <%= danger_help_block(:title_en) %>
    </div>
  </div>

  <%= render_control_buttons(form: f,
                             obj: @object,
                             confirm_message: t(:delete_confirm, scope: :agency_type)) %>
<% end %>
