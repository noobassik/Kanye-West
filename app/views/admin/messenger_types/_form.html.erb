<%= form_with model: @object, data: { remote: true, type: :json }, html: { 'data-ajax-submit' => '' } do |f| %>
  <div class="form-group row">
    <%= f.label :title, "Title", class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :title, class: "form-control" %>
      <%= danger_help_block(:title) %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :icon_class, "Класс иконки, брать из
                                   <a href='https://fontawesome.com/icons?d=gallery'>Font Awesome</a>
                                   или
                                   <a href='https://getbootstrap.com/docs/3.3/components/'>Glyphicons</a>".html_safe,
                class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :icon_class, class: "form-control" %>
    </div>
  </div>

  <%= render_control_buttons(form: f,
                             obj: @object,
                             confirm_message: t(:delete_confirm, scope: :messenger_type)) %>
<% end %>