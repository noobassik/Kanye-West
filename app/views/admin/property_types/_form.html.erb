<%= form_with model: @object, data: { remote: true, type: :json }, html: { 'data-ajax-submit' => '' } do |f| %>
  <div class="form-group row">
    <%= f.label :title_ru, "Title Ru", class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :title_ru, class: "form-control" %>
      <%= danger_help_block(:title_ru) %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :title_en, "Title En", class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :title_en, class: "form-control" %>
      <%= danger_help_block(:title_en) %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :property_supertype, "Property Supertype", class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.select :property_supertype_id,
                   @property_supertypes,
                   {prompt: "Категория..."},
                   class: "form-control select2-enable select-property-supertype" %>
      <%= danger_help_block(:property_supertype_id) %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :property_type_group, "Property Type Group", class: 'col-lg-2 control-label' %>
    <div class="col-lg-6">
      <%= f.select :property_type_group_id,
                   @property_type_groups,
                   {prompt: "Группа типов..."},
                   class: "form-control select2-enable select-property-type-group" %>
    </div>
  </div>

  <%= render_control_buttons(form: f,
                             obj: @object,
                             confirm_message: t(:delete_confirm, scope: :property_types)) %>
<% end %>
