<% title @page_title %>
<h2><%= t(:index, scope: :contact_types) %>
  <%= link_to t("common.add"), new_contact_type_path, class: 'btn btn-primary' %>
</h2>

<table class="table table-striped table-hover table-with-items">
  <tr>
    <th>â„–</th>
    <th></th>
    <th><%= t(:title_ru, scope: :common) %></th>
    <th><%= t(:title_en, scope: :common) %></th>
    <th></th>
    <th></th>
  </tr>

  <% @objects.each_with_index do |contact_type, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><i class="<%= contact_type.icon_class %>"></i></td>
        <td><%= contact_type.title_ru %></td>
        <td><%= contact_type.title_en %></td>
        <td><%= contact_type.contacts.count %></td>
        <td>
          <%= render_compact_control_buttons(obj: contact_type,
                                             edit_obj_path: edit_contact_type_path(contact_type),
                                             confirm_message: t(:delete_confirm, scope: :contact_types)) %>
        </td>
      </tr>
  <% end %>
</table>
