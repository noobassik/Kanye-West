<% title @page_title %>
<h2><%= t(:index, scope: :article_categories) %>
  <%= link_to t("common.add"), new_article_category_path, class: 'btn btn-primary' %>
</h2>

<table class="table table-striped table-hover table-with-items">
  <tr>
    <th>â„–</th>
    <th><%= t(:title_ru, scope: :common) %></th>
    <th><%= t(:title_en, scope: :common) %></th>
    <th><%= t(:slug, scope: :areas) %></th>
    <th><%= t(:articles_count, scope: :common) %></th>
    <th></th>
  </tr>

  <% @objects.each_with_index do |article_category, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= article_category.title_ru %></td>
        <td><%= article_category.title_en %></td>
        <td><%= article_category.slug %></td>
        <td><%= article_category.articles.count %></td>
        <td>
          <%= render_compact_control_buttons(obj: article_category,
                                             edit_obj_path: edit_article_category_path(article_category),
                                             confirm_message: t(:delete_confirm, scope: :article_categories)) %>
        </td>
      </tr>
  <% end %>
</table>
