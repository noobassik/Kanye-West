<% title @page_title %>
<h2><%= t(:index, scope: :property_supertypes) %>
  <%= link_to t("common.add"), new_property_supertype_path, class: 'btn btn-primary' %>
</h2>

<table class="table table-striped table-hover table-with-items">
  <tr>
    <th>â„–</th>
    <th><%= "Title Ru" %></th>
    <th><%= "Title En" %></th>
    <th><%= t(:properties_count, scope: :common) %></th>
    <th></th>
  </tr>

  <% @objects.each_with_index do |property_supertype, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= property_supertype.title_ru %></td>
        <td><%= property_supertype.title_en %></td>
        <td><%= property_supertype.properties.count %></td>
        <td>
          <%= render_compact_control_buttons(obj: property_supertype,
                                             edit_obj_path: edit_property_supertype_path(property_supertype),
                                             confirm_message: t(:delete_confirm, scope: :property_supertypes)) %>
        </td>
      </tr>
  <% end %>
</table>
